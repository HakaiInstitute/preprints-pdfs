  language = {en},
  keywords = {\_tablet,Be-10,British Columbia,coastal route,Cordilleran Ice Sheet,deglaciation,human migration},
  pdf = {https://github.com/HakaiInstitute/preprints-pdfs/blob/pdfs/darvill_menounos_goehring_lian_caffee_2018_retreat_of_the_western_cordilleran_ice_sheet_margin_during_the_last_deglaciation.pdf}
