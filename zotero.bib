  pdf = {https://github.com/HakaiInstitute/preprints-pdfs/blob/pdfs/garzke_forster_godwin_johnson_krkošek_mahara_pakhomov_rogers_hunt_2022_dynamic_coastal_pelagic_habitat_drives_rapid_changes_in_growth_and_condition_of.pdf}
