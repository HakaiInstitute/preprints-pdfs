@article{lepofskyAncientAnthropogenicClam2021,
  title = {Ancient Anthropogenic Clam Gardens of the Northwest Coast Expand Clam Habitat},
  author = {Lepofsky, Dana and Toniello, Ginevra and Earnshaw, Jacob and Roberts, Christine and Wilson, Louis and Rowell, Kirsten and Holmes, Keith},
