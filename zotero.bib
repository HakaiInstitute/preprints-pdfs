@article{grilliotAeolianSandTransport2019,
  title = {Aeolian Sand Transport and Deposition Patterns within a Large Woody Debris Matrix Fronting a Foredune},
  author = {Grilliot, Michael J. and Walker, Ian J. and Bauer, Bernard O.},
  year = {2019},
  month = aug,
