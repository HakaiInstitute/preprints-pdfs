@article{hugonnetAcceleratedGlobalGlacier2021,
  title = {Accelerated Global Glacier Mass Loss in the Early Twenty-First Century},
  author = {Hugonnet, Romain and McNabb, Robert and Berthier, Etienne and Menounos, Brian and Nuth, Christopher and Girod, Luc and Farinotti, Daniel and Huss, Matthias and Dussaillant, Ines and Brun, Fanny and Kääb, Andreas},
