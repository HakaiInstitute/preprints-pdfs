@article{trevizansegoviaMicroeukaryoticCommunitiesAssociated2021,
  title = {Microeukaryotic Communities Associated With the Seagrass Zostera Marina Are Spatially Structured},
  author = {Trevizan Segovia, Bianca and {Sanders-Smith}, Rhea and Adamczyk, Emily M. and Forbes, Coreen and {Hessing-Lewis}, Margot and O’Connor, Mary I. and Parfrey, Laura Wegener},
