@article{ulloaCyanobacteriumProchlorococcusHas2021,
  title = {The Cyanobacterium Prochlorococcus Has Divergent Light-Harvesting Antennae and May Have Evolved in a Low-Oxygen Ocean},
  author = {Ulloa, Osvaldo and {Henríquez-Castillo}, Carlos and {Ramírez-Flandes}, Salvador and Plominsky, Alvaro M. and Murillo, Alejandro A. and {Morgan-Lang}, Connor and Hallam, Steven J. and Stepanauskas, Ramunas},
