  year = {2017},
  month = apr,
  journal = {Deep Sea Research Part II: Topical Studies in Oceanography},
  series = {Eddy-Pump: Pelagic Processes along the Eddying Antarctic Polar Front with Influence on the Carbon Pump in the Atlantic Sector of the Southern Ocean},
  volume = {138},
