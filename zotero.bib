@article{serviceIndigenousKnowledgeScience2014,
  title = {Indigenous Knowledge and Science Unite to Reveal Spatial and Temporal Dimensions of Distributional Shift in Wildlife of Conservation Concern},
  author = {Service, Christina N. and Adams, Megan S. and Artelle, Kyle A. and Paquet, Paul and Grant, Laura V. and Darimont, Chris T.},
  year = {2014},
  month = jul,
