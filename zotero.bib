@article{eamerGlacialReadvanceRetreat2017,
  title = {A Glacial Readvance during Retreat of the Cordilleran Ice Sheet, British Columbia Central Coast},
  author = {Eamer, Jordan B. R. and Shugar, Dan H. and Walker, Ian J. and Lian, Olav B. and Neudorf, Christina M. and Telka, Alice M.},
