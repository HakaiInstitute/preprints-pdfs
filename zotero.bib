@article{hegerHolarcticPhylogeographyTestate2013,
  title = {Holarctic Phylogeography of the Testate Amoeba Hyalosphenia Papilio (Amoebozoa: Arcellinida) Reveals Extensive Genetic Diversity Explained More by Environment than Dispersal Limitation},
  shorttitle = {Holarctic Phylogeography of the Testate Amoeba Hyalosphenia Papilio (Amoebozoa},
