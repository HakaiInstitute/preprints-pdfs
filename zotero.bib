@article{coxCommunityAssessmentTechniques2017,
  title = {Community Assessment Techniques and the Implications for Rarefaction and Extrapolation with Hill Numbers},
  author = {Cox, Kieran D. and Black, Morgan J. and Filip, Natalia and Miller, Matthew R. and Mohns, Kayla and Mortimor, James and Freitas, Thaise R. and Greiter Loerzer, Raquel and Gerwing, Travis G. and Juanes, Francis and Dudas, Sarah E.},
  year = {2017},
  journal = {Ecology and Evolution},
