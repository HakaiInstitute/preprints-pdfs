  author = {{Reeder-Myers}, Leslie and Braje, Todd J. and Hofman, Courtney A. and Elliott Smith, Emma A. and Garland, Carey J. and Grone, Michael and Hadden, Carla S. and Hatch, Marco and Hunt, Turner and Kelley, Alice and LeFebvre, Michelle J. and Lockman, Michael and McKechnie, Iain and McNiven, Ian J. and Newsom, Bonnie and Pluckhahn, Thomas and Sanchez, Gabriel and Schwadron, Margo and Smith, Karen Y. and Smith, Tam and Spiess, Arthur and Tayac, Gabrielle and Thompson, Victor D. and Vollman, Taylor and Weitzel, Elic M. and Rick, Torben C.},
