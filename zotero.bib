@article{brajeFladmark40What2020,
  title = {Fladmark + 40: What Have We Learned about a Potential Pacific Coast Peopling of the Americas?},
  shorttitle = {Fladmark + 40},
  author = {Braje, Todd J. and Erlandson, Jon M. and Rick, Torben C. and Davis, Loren and Dillehay, Tom and Fedje, Daryl W. and Froese, Duane and Gusick, Amy and Mackie, Quentin and McLaren, Duncan and Pitblado, Bonnie and Raff, Jennifer and {Reeder-Myers}, Leslie and Waters, Michael R.},
  year = {2020},
  month = jan,
  journal = {American Antiquity},
  volume = {85},
  number = {1},
  pages = {1--21},
  publisher = {Cambridge University Press},
  issn = {0002-7316, 2325-5064},
  doi = {10.1017/aaq.2019.80},
