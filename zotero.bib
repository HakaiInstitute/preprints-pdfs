  language = {en},
  keywords = {\_tablet,area–heterogeneity tradeoff,biogenic structural complexity,cold water corals,glass sponges,marine protected area network,Northern Shelf Bioregion,Sebastes,spatial protection,species richness,topographic structural complexity},
  pdf = {https://github.com/HakaiInstitute/preprints-pdfs/blob/pdfs/frid_mcgreer_gale_rubidge_blaine_reid_olson_hankewich_mason_rolston_tallio_2018_the_area–heterogeneity_tradeoff_applied_to_spatial_protection_of_rockfish.pdf}
}

@article{friedlingsteinGlobalCarbonBudget2020,
