  language = {en},
  keywords = {\_tablet,Bioindicators,Fish,Heavy metal,Lead isotopes,Marine ecosystem},
  pdf = {https://github.com/HakaiInstitute/preprints-pdfs/blob/pdfs/li_weis_smith_shiel_smith_hunt_torchinsky_pakhomov_2020_assessing_lead_sources_in_fishes_of_the_northeast_pacific_ocean.pdf}
