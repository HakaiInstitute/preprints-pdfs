  langid = {english},
  language = {en},
  keywords = {\_tablet,British Columbia},
  pdf = {https://github.com/HakaiInstitute/preprints-pdfs/blob/pdfs/rechsteiner_olson_2016_harlequin_ducks_(ihistrionicus_histrionicus-i)_scavenge_sea_urchin.pdf}
