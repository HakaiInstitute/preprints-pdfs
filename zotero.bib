@article{wagnerSalmonIncreaseForest2019,
  title = {Salmon Increase Forest Bird Abundance and Diversity},
  author = {Wagner, Marlene A. and Reynolds, John D.},
  year = {2019},
  month = feb,
  journal = {PLOS ONE},
  volume = {14},
