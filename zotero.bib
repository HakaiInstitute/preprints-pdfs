@article{reimchenInfluenceSpawningSalmon2019,
  title = {Influence of Spawning Salmon on Tree-Ring Width, Isotopic Nitrogen, and Total Nitrogen in Old-Growth Sitka Spruce from Coastal British Columbia},
  author = {Reimchen, Thomas Edward and Arbellay, Estelle},
  year = {2019},
