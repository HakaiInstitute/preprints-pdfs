  pdf = {https://github.com/HakaiInstitute/preprints-pdfs/blob/pdfs/hamilton_saccomanno_heady_gehman_lonhart_beas-luna_francis_lee_rogers-bennett_salomon_gravem_2021_disease-driven_mass_mortality_event_leads_to_widespread_extirpation_and.pdf}
