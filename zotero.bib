  author = {Gross, Collin P. and Duffy, J. Emmett and Hovel, Kevin A. and Kardish, Melissa R. and Reynolds, Pamela L. and Boström, Christoffer and Boyer, Katharyn E. and Cusson, Mathieu and Eklöf, Johan and Engelen, Aschwin H. and Eriksson, Britas Klemens and Fodrie, F. Joel and Griffin, John N. and Hereu, Clara M. and Hori, Masakazu and Hughes, A. Randall and Ivanov, Mikhail V. and Jorgensen, Pablo and Kruschel, Claudia and Lee, Kun-Seop and Lefcheck, Jonathan and McGlathery, Karen and Moksnes, Per-Olav and Nakaoka, Masahiro and O'Connor, Mary I. and O'Connor, Nessa E. and Olsen, Jeanine L. and Orth, Robert J. and Peterson, Bradley J. and Reiss, Henning and Rossi, Francesca and Ruesink, Jennifer and Sotka, Erik E. and Thormar, Jonas and Tomas, Fiona and Unsworth, Richard and Voigt, Erin P. and Whalen, Matthew A. and Ziegler, Shelby L. and Stachowicz, John J.},
  year = {2022},
