@article{herranzRedescriptionEchinoderesOhtsukai2016,
  title = {Redescription of Echinoderes Ohtsukai Yamasaki and Kajihara, 2012 and E. Kozloffi Higgins, 1977 from the Northeastern Pacific Coast, Including the First Report of a Potential Invasive Species of Kinorhynch},
