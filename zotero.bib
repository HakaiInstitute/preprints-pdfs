@article{iacarellaAnthropogenicDisturbanceHomogenizes2018,
  title = {Anthropogenic Disturbance Homogenizes Seagrass Fish Communities},
  author = {Iacarella, Josephine C. and Adamczyk, Emily and Bowen, Dan and Chalifour, Lia and Eger, Aaron and Heath, William and Helms, Sibylla and {Hessing-Lewis}, Margot and Hunt, Brian P. V. and MacInnis, Andrew and O'Connor, Mary I. and Robinson, Clifford L. K. and Yakimishyn, Jennifer and Baum, Julia K.},
  year = {2018},
  journal = {Global Change Biology},
