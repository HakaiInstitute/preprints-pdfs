@article{pakhomovVerticalDistributionActive2019,
  title = {Vertical Distribution and Active Carbon Transport by Pelagic Decapods in the North Pacific Subtropical Gyre},
  author = {Pakhomov, Evgeny A and Podeswa, Yasha and Hunt, Brian P V and Kwong, Lian E},
  year = {2019},
