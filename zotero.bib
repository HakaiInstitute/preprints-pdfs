@article{eckertDivingBackTime2018,
  title = {Diving Back in Time: Extending Historical Baselines for Yelloweye Rockfish with Indigenous Knowledge},
  shorttitle = {Diving Back in Time},
  author = {Eckert, Lauren E. and Ban, Natalie C. and Frid, Alejandro and McGreer, Madeleine},
  year = {2018},
  journal = {Aquatic Conservation: Marine and Freshwater Ecosystems},
  volume = {28},
