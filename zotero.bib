@article{liAssessingLeadSources2020,
  title = {Assessing Lead Sources in Fishes of the Northeast Pacific Ocean},
  author = {Li, Miling and Weis, Dominique and Smith, Kate E. and Shiel, Alyssa E. and Smith, Wade D. and Hunt, Brian P. V. and Torchinsky, Abe and Pakhomov, Evgeny A.},
  year = {2020},
