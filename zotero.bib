@article{fedjeSlowstandsStillstandsTransgressions2021,
  title = {Slowstands, Stillstands and Transgressions: Paleoshorelines and Archaeology on Quadra Island, BC, Canada},
  shorttitle = {Slowstands, Stillstands and Transgressions},
  author = {Fedje, Daryl and Lausanne, Alex and McLaren, Duncan and Mackie, Quentin and Menounos, Brian},
