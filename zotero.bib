@article{lepofskyHistoricalEcologyCultural2017,
  title = {Historical Ecology of Cultural Keystone Places of the Northwest Coast},
  author = {Lepofsky, Dana and Armstrong, Chelsey Geralda and Greening, Spencer and Jackley, Julia and Carpenter, Jennifer and Guernsey, Brenda and Mathews, Darcy and Turner, Nancy J.},
  year = {2017},
